<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android1:background="@drawable/background"
    tools:context=".LoginScreen" >

    <EditText
        android1:id="@+id/passwordText"
        android1:layout_width="fill_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/editText1"
        android1:layout_centerVertical="true"
        android1:textSize="30sp"
        android1:text="Password"
        android1:onClick="passwordTextOnClick"
        android1:ems="10"/>

    <Button
        android1:id="@+id/loginBtn"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignRight="@+id/passwordText"
        android1:layout_below="@+id/passwordText"
        android1:layout_marginRight="25dp"
        android1:layout_marginTop="26dp"
        android1:onClick="loginBtnOnClick"
        android1:text="Login" />

    <EditText
        android1:id="@+id/usernameText"
        android1:layout_width="fill_parent"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/passwordText"
        android1:layout_alignLeft="@+id/passwordText"
        android1:ems="10"
        android1:onClick="usernameTextOnClick"
        android1:text="User Name"
        android1:textSize="30sp" />

</RelativeLayout>
