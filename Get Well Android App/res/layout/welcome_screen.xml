<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WelcomeScreen" >

    <Button
        android:id="@+id/currGlobalBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/careerBtn"
        android:layout_alignBottom="@+id/careerBtn"
        android:layout_alignLeft="@+id/socialBtn"
        android:background="@drawable/goalicon"
        android:onClick="currGlobalBtnOnClick" />

    <Button
        android:id="@+id/moneyBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/socialBtn"
        android:layout_alignBottom="@+id/socialBtn"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/socialBtn"
        android:background="@drawable/financeicon"
        android:onClick="moneyBtnOnClick" />

    <Button
        android:id="@+id/settings"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/currGlobalBtn"
        android:layout_alignBottom="@+id/currGlobalBtn"
        android:layout_alignLeft="@+id/moneyBtn"
        android:background="@drawable/settingsicon" />

    <Button
        android:id="@+id/info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/moneyBtn"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/infoicon" />

    <Button
        android:id="@+id/socialBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/healthBtn"
        android:layout_alignBottom="@+id/healthBtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/socialicon"
        android:onClick="socialBtnOnClick" />

    <Button
        android:id="@+id/careerBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/socialBtn"
        android:layout_alignLeft="@+id/healthBtn"
        android:layout_marginBottom="23dp"
        android:background="@drawable/careericon"
        android:onClick="careerBtnOnClick" />

    <Button
        android:id="@+id/healthBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="237dp"
        android:background="@drawable/healthicon"
        android:onClick="healthBtnOnClick" />

    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/careerBtn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:textSize="40sp"
        android:layout_toLeftOf="@+id/moneyBtn"
        android:text="Hello " />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/greetingText"
        android:layout_below="@+id/greetingText"
        android:text="Score:  "
        android:textSize="30sp" />

</RelativeLayout>